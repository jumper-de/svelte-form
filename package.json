{
  "name": "@flit/svelte-form",
  "version": "1.0.2",
  "description": "A svelte form management library",
  "homepage": "https://github.com/jumper-de/svelte-form",
  "bugs": "https://github.com/jumper-de/svelte-form/issues",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "./LICENSE.txt",
    "./README.md"
  ],
  "scripts": {
    "build": "vite build && npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "package": "svelte-kit sync && svelte-package",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "start": "vite dev"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.sublime-project",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.0",
    "@sveltejs/kit": "^2.7.2",
    "@sveltejs/package": "^2.3.6",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^5.1.0",
    "svelte-check": "^4.0.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "svelte": "^5.0.0-next.1"
  }
}
